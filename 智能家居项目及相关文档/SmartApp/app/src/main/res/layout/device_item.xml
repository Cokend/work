<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/device_item_image"
        android:scaleType="centerCrop"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_phone_android_blue_500_48dp"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:text="我的Android手机"
        android:id="@+id/device_item_name"
        android:layout_toRightOf="@id/device_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:text="上次登录：2016-3-22"
        android:id="@+id/device_item_time"
        android:layout_below="@id/device_item_name"
        android:layout_toRightOf="@id/device_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
