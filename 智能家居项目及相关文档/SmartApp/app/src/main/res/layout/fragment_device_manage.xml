<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <app.cddic.com.smarter.widget.TopView
        android:id="@+id/deviceManage_topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></app.cddic.com.smarter.widget.TopView>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="@string/deviceName"
        android:layout_gravity="center"
        android:padding="5dp"
        android:textSize="20dp"
        android:textColor="@color/colorDarkText"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <EditText
        android:id="@+id/deviceName_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:drawableRight="@drawable/ic_edit"
        android:focusable="false"
        android:text="厨房设备"
        android:focusableInTouchMode="false"
        android:textColor="#000000"/>
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/deviceAlias"
            android:layout_gravity="center"
            android:padding="5dp"
            android:textSize="20dp"
            android:textColor="@color/colorDarkText"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/deviceAlias_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:drawableRight="@drawable/ic_edit"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="厨房"
            android:textColor="#000000"/>
        </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <ExpandableListView
        android:id="@+id/device_manage_ELV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></ExpandableListView>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  xmlns:android="http://schemas.android.com/apk/res/android">
        <Button
            android:layout_weight="0.28"
            android:id="@+id/deleteAllCorrelation_btn"
            android:text="@string/deleteAllCorrelation"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:background="#47B0F6"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="0.35"
            android:id="@+id/forceAllOffLine_btn"
            android:text="@string/forceAllOffLine"
            android:textStyle="bold"
            android:background="#47B0F6"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>