<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <app.cddic.com.smarter.widget.TopView
        android:id="@+id/keyFindSuccess_topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="140dp"
        android:background="@drawable/chat_edit_text"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="50dp"
            android:text="@string/congratulateSuccessFindKey"
            android:textSize="18sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/returnLogin_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/colorButton"
        android:text="@string/returnLogin"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="90dp"
        android:textSize="18dp"
        android:textColor="@android:color/background_light"/>

</LinearLayout>