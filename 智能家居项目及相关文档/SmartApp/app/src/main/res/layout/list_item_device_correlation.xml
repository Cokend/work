<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/correlationClick_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/setbar_bg"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/correlation_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_weight="0.2"
        android:src="@drawable/avatar"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="16sp"/>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
    android:id="@+id/Jurisdiction_textView"
    android:layout_width="40dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="17dp"
    android:text="@string/authority"/>
    <TextView
        android:id="@+id/remoteLogin_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="远程登录"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/time_textView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:text="16日 13：24"
        android:textSize="16sp"/>

</LinearLayout>
        </LinearLayout>


    <TextView
        android:id="@+id/stateDeviceCorrelation_textView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="bottom"
        android:layout_marginBottom="10dp"
        android:textSize="16dp"
        android:textColor="#000000"/>
</LinearLayout>