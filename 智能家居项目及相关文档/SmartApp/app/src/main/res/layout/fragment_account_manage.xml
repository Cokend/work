<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1">


    <include layout="@layout/user_account_info_list_item"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/setbar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userAvatar_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameSecond_textView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="李师傅"
                android:textColor="@color/colorDarkText"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/idSecond_textView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="456452457785"
                android:textColor="@color/colorDarkText"
                android:textSize="16sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/chooseSecond_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/ic_cab_done_holo_light"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/setbar_bg"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_input_add"/>

        <TextView
            android:id="@+id/addId_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@android:drawable/ic_menu_directions"
            android:gravity="center_vertical"
            android:text="@string/addId"
            android:textColor="@color/colorButton"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="250sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exitId_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/setbar_bg"
            android:drawableRight="@android:drawable/ic_menu_directions"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/exitNowId"
            android:textColor="@color/colorDarkText"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/deleteId_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/setbar_bg"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/deleteNowId"
            android:textColor="@color/colorDarkText"
            android:textSize="16sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/loginSetting_btn"
        android:layout_width="127dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@color/colorButton"
        android:gravity="center"
        android:text="@string/loginSetting"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"/>

</LinearLayout>