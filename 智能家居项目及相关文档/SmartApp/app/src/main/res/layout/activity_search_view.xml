<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <app.cddic.com.smarter.widget.TopView
        android:id="@+id/search_view_topview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <SearchView
        android:id="@+id/searchView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:iconifiedByDefault="false"
        android:focusable="false"
        android:queryHint="@string/query_hint"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="#ffd0c9b8" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="设备:"
        android:textSize="20dp"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#ffd0c9b8" />

    <ListView
        android:id="@+id/searchview_device_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="#ffd0c9b8" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="联系人:"
        android:textSize="20dp"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#ffd0c9b8" />
    <ListView
        android:id="@+id/searchview_contact_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="#ffd0c9b8" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="聊天记录:"
        android:textSize="20dp"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#ffd0c9b8" />
    <ListView
        android:id="@+id/searchview_chat_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>
</LinearLayout>
