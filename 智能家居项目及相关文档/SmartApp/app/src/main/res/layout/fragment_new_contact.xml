<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <app.cddic.com.smarter.widget.TopView
        android:id="@+id/newContact_topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:background="#ffffff"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_contact"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="13dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:text="@string/newContact_zhangshifu"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="13dp"
                android:paddingLeft="10dp"
                android:textColor="#666666"
                android:gravity="center_vertical"
                android:text="@string/newContact_message"
                />

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#000000"
            android:gravity="center"
            android:text="@string/newContact_yes"
            android:textColor="#ffffff"
            android:textSize="14dp"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#ffd0c9b8" />
    <LinearLayout
        android:background="#ffffff"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/button_bg"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="13dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:text="@string/newContact_liyan"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="13dp"
                android:paddingLeft="10dp"
                android:textColor="#666666"
                android:gravity="center_vertical"
                android:text="@string/newContact_message"
                />

        </LinearLayout>
        <TextView
            android:background="#808080"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="14dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"
            android:text="@string/newContact_no"
            android:layout_weight="1"
            />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#ffd0c9b8" />

    <LinearLayout
        android:background="#ffffff"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_contact"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="妍蝉"
                android:textColor="#000000"
                android:textSize="13dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="13dp"
                android:paddingLeft="10dp"
                android:textColor="#666666"
                android:gravity="center_vertical"
                android:text="@string/newContact_message"
                />

        </LinearLayout>
        <TextView
            android:background="#000000"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="14dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="@string/newContact_yes"
            android:layout_weight="1"
            />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#ffd0c9b8" />
    <LinearLayout
        android:background="#ffffff"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/button_bg"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="13dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:text="民人"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="13dp"
                android:paddingLeft="10dp"
                android:textColor="#666666"
                android:gravity="center_vertical"
                android:text="@string/newContact_message"
                />

        </LinearLayout>
        <TextView
            android:background="#808080"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="14dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"
            android:text="@string/newContact_no"
            android:layout_weight="1"
            />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#ffd0c9b8" />

    <LinearLayout
        android:background="#ffffff"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_contact"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="13dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:text="胡适"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="13dp"
                android:paddingLeft="10dp"
                android:textColor="#666666"
                android:gravity="center_vertical"
                android:text="@string/newContact_message"
                />

        </LinearLayout>
        <TextView
            android:background="#808080"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="14dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"
            android:text="@string/newContact_no"
            android:layout_weight="1"
            />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#ffd0c9b8" />

</LinearLayout>


