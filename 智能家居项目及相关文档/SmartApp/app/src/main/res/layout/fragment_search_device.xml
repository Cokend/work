<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <app.cddic.com.smarter.widget.TopView
        android:id="@+id/searchDevice_topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新发现设备列表："
        android:textSize="18sp"
        android:textColor="#990000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>
    <ListView
        android:id="@+id/serchDevice_listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp">
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="70dp">
        <Button
            android:id="@+id/chooseAssociate_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="选择关联新设备"
            android:textColor="#ffffff"
            android:background="#66ccff"
            android:textSize="18sp"
            android:layout_marginRight="40dp"/>
        <Button
            android:id="@+id/handAssociate_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="手工关联新设备"
            android:textColor="#ffffff"
            android:background="#66ccff"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>