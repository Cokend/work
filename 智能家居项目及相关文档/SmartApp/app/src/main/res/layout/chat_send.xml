<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/chat_send_language_imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_mic"/>

    <EditText
        android:id="@+id/chat_send_editText"
        android:layout_width="0dp"
        android:paddingStart="10dp"
        android:layout_marginEnd="5dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:background="@drawable/chat_edit_text"/>
    <ImageView
        android:id="@+id/chat_send_add_imageview"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/add"/>

    <Button
        android:id="@+id/chat_send_button"
        android:layout_width="60dp"
        android:background="@drawable/dark_blue_background"
        android:layout_height="30dp"
        android:textColor="#fff"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:text="@string/send"/>

</LinearLayout>